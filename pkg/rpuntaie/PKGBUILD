# # curl -OLs git://git.io/installarch
# # DSK=/dev/sda USR=u PW=p HST=up ZONE=Vienna IP2=1.121 AIP2=1.108 ./installarch rpuntaie-meta

pkgname=(rpuntaie-meta)
pkgver=10
pkgrel=1
pkgdesc="Archlinux for rpuntaie"
arch=(any)
license=(MIT)

package_rpuntaie-meta() {
    # Base group:
    depends=(bash bzip2 coreutils cryptsetup device-mapper dhcpcd diffutils e2fsprogs file
    filesystem findutils gawk gcc-libs gettext glibc grep gzip inetutils iproute2
    iputils less licenses linux linux-firmware logrotate man-db jfsutils lvm2 reiserfsprogs xfsprogs
    man-pages mdadm pacman pciutils perl procps-ng psmisc s-nail sed nano vi
    shadow sysfsutils systemd-sysvcompat tar texinfo usbutils util-linux which)

    # partly needed by rollarchroot
    depends+=(nfs-utils samba sudo git mercurial subversion
    python devtools dialog wpa_supplicant ntp openssh)

    # extra general packages (ag=the_silver_searcher)
    depends+=(stow ripgrep fd bc tmux wget fzf unzip pacman-contrib bat ncdu 
    the_silver_searcher rtorrent tree p7zip ranger)

    depends+=(keybase kbfs keybase-gui qrencode pass) #pulls gnupg (gpg)

    # debugging tools
    depends+=(lsof bind-tools mtr socat htop iotop openbsd-netcat strace)

    # filesystems
    depends+=(exfat-utils dosfstools f2fs-tools)

    # Base Group
    depends+=(autoconf automake binutils bison fakeroot flex gcc
    groff libtool m4 make patch pkgconf systemd)

    # C/C++
    depends+=(cmake meson cscope ctags llvm clang gdb lldb boost eigen)

    # zsh (to configure via dotfiles, or install grm-zsh-config afterwards)
    depends+=(acpi powerline powerline-fonts awesome-terminal-fonts
    zsh zsh-syntax-highlighting zsh-autosuggestions zsh-completions zsh-history-substring-search)

    # editor nvim vor CLI and gvim for GUI (see below)
    depends+=(neovim python-neovim gvim pluma)

    # Python
    depends+=(python-gobject python-pyqt5 python-scipy python-sympy
    python-sip python-cffi python-cairocffi python-h5py python-beautifulsoup4
    python-html5lib python-bleach python-pytz python-docker python-docutils
    python-gmpy2 python-jinja python-matplotlib python-pillow python-pip
    python-pygal python-pygments python-pylint python-whoosh python-watchdog
    python-pytest python-mock python-pytest-mock python-coverage python-pytest-cov
    python-setuptools python-wheel python-snowballstemmer python-virtualenv python-yaml
    python-django python-tornado python-tox python-pandas python-cvxopt python-webtest
    python-sphinx python-lxml python-pyx python-urllib3 python-dateutil
    python-decorator python-pyparsing python-nltk 
    ipython python-ipykernel jupyter cython)

    # DB
    depends+=(sqlite mariadb)

    # Java/JS
    depends+=(jdk-openjdk yarn npm nodejs prettier scala sbt gradle clojure groovy ant maven)

    # Other Languages
    depends+=(go mono dotnet-sdk skia-sharp ghc pandoc cabal-install git-annex lua rust julia 
    openblas gcc-fortran gcc-objc ruby fpc)

    # IDE's
    depends+=(atom eclipse-cpp intellij-idea-community-edition lazarus)

    # PHP/Mediawiki
    depends+=(php nginx mediawiki)

    # bluetooth
    depends+=(bluez bluez-utils)

    # audio
    depends+=(alsa-utils pulseaudio pulseaudio-alsa pulseaudio-bluetooth pavucontrol paprefs)

    # drivers and utilities
    depends+=(xf86-input-libinput xf86-input-synaptics
    xf86-video-intel xf86-video-vesa nvidia nvidia-utils)

    # Xorg packages and utilities
    depends+=(xorg-xsetroot xorg-xkill xorg-xbacklight xorg-bdftopcf
    xorg-iceauth xorg-luit xorg-mkfontdir xorg-mkfontscale xorg-sessreg
    xorg-setxkbmap xorg-smproxy xorg-x11perf xorg-xauth
    xorg-xcmsdb xorg-xcursorgen xorg-xdpyinfo xorg-xdriinfo xorg-xev
    xorg-xgamma xorg-xhost xorg-xinput xorg-xkbcomp xorg-xkbevd xorg-xkbutils
    xorg-xlsatoms xorg-xlsclients xorg-xmodmap xorg-xpr xorg-xprop
    xorg-xrandr xorg-xrdb xorg-xrefresh xorg-xset xorg-xvinfo
    xorg-xwd xorg-xwininfo xorg-xwud xorg-server openssh-askpass)

    # window manager
    depends+=(xmonad xmonad-contrib i3 openbox
    xterm alacritty rxvt-unicode xorg-xinit dmenu gmrun scrot slock
    libnotify dunst xsel xclip dex)

    # fonts
    depends+=(noto-fonts noto-fonts-cjk noto-fonts-emoji noto-fonts-extra
    ttf-fira-mono ttf-fira-code ttf-anonymous-pro ttf-fantasque-sans-mono
    ttf-dejavu ttf-freefont xorg-fonts-misc ttf-inconsolata ttf-roboto bdf-unifont)

    # virtualisation
    depends+=(virtualbox-guest-modules-arch virtualbox-guest-utils virtualbox-host-modules-arch virtualbox vagrant)

    # docker
    depends+=(docker docker-compose dnsmasq)

    # embedded
    depends+=(qemu qemu-arch-extra picocom ddrescue arm-none-eabi-gcc)

    # electronics
    depends+=(kicad arduino arduino-docs yosys)

    # graphics
    depends+=(graphviz vtk mayavi opencascade
    opencv opencv-samples
    librecad blender gimp krita inkscape
    sk1 fontforge imagemagick imagemagick-doc processing openscad)

    # office
    depends+=(libreoffice-fresh)

    # tex
    depends+=(texlive-core mathjax
    texlive-bibtexextra texlive-fontsextra
    texlive-formatsextra texlive-games texlive-humanities texlive-langcyrillic
    texlive-latexextra texlive-music texlive-pictures
    texlive-pstricks texlive-publishers texlive-science)

    # video
    depends+=(vlc ffmpeg)

    # browsers
    depends+=(firefox chromium links qutebrowser w3m)

    # viewers
    depends+=(eom feh links evince thunar ghostscript mupdf zathura)

    # mail, IRC
    depends+=(thunderbird neomutt offlineimap msmtp weechat)

    # dicts
    depends+=(dictd aspell-de aspell-en aspell-es aspell-fr aspell-it aspell-ru
    vim-spell-en vim-spell-de vim-spell-it vim-spell-fr vim-spell-ru vim-spell-es)

    # maths
    depends+=(octave sagemath r geogebra root gnuplot)

    # science
    depends+=(hdf5 pymol)

    # organize, finance
    depends+=(task ledger)
}


