    depends+=(virtualbox-guest-modules-arch virtualbox-guest-utils virtualbox-host-modules-arch virtualbox vagrant)

    # docker
    depends+=(docker docker-compose dnsmasq)

    # embedded
    depends+=(qemu qemu-arch-extra picocom ddrescue arm-none-eabi-gcc)

    # electronics
    depends+=(kicad arduino arduino-docs yosys)

    # graphics
    depends+=(graphviz vtk mayavi opencascade
    opencv opencv-samples povray
    librecad blender gimp krita inkscape
    sk1 fontforge imagemagick imagemagick-doc processing openscad)

    # office
    depends+=(libreoffice-fresh
    tesseract #ocr
    tesseract-data-eng
    )

    # tex
    depends+=(texlive-core mathjax lyx qtikz texmacs
    texlive-bibtexextra texlive-fontsextra
    texlive-formatsextra texlive-games texlive-humanities texlive-langcyrillic
    texlive-latexextra texlive-music texlive-pictures
    texlive-pstricks texlive-publishers texlive-science)

    # video
    depends+=(vlc ffmpeg)

    # browsers
    depends+=(firefox chromium links qutebrowser w3m browserpass browserpass-firefox browserpass-chromium)

    # viewers
    depends+=(eom feh links evince thunar meld ghostscript mupdf zathura)

    # mail, IRC
    depends+=(thunderbird mutt offlineimap msmtp weechat)

