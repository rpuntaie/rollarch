# # curl -OLs git://git.io/installarch
# # DSK=/dev/sda USR=u PW=p HST=up ZONE=Vienna IP2=1.121 AIP2=1.108 ./installarch rpuntaie-meta

pkgname=(rpuntaie-meta)
pkgver=10
pkgrel=1
pkgdesc="Archlinux for rpuntaie"
arch=(any)
license=(MIT)

package_rpuntaie-meta() {
    provides=(vi)
    conflicts=(vi)

    # Base group:
    # Explicitly removed from the base group: jfsutils lvm2 nano reiserfsprogs vi xfsprogs
    depends=(bash bzip2 coreutils cryptsetup device-mapper dhcpcd diffutils e2fsprogs file
    filesystem findutils gawk gcc-libs gettext glibc grep gzip inetutils iproute2
    iputils less licenses linux linux-firmware logrotate man-db
    man-pages mdadm pacman pciutils perl procps-ng psmisc s-nail sed
    shadow sysfsutils systemd-sysvcompat tar texinfo usbutils util-linux which)

    # partly needed by rollarchroot
    depends+=(nfs-utils samba sudo git mercurial subversion
    python devtools dialog wpa_supplicant ntp openssh)

    # extra general packages (ag=the_silver_searcher)
    depends+=(stow ripgrep fd bc tmux wget fzf unzip pacman-contrib bat ncdu 
    the_silver_searcher rtorrent tree p7zip ranger)

    depends+=(keybase kbfs keybase-gui qrencode pass) #pulls gnupg (gpg)

    # debugging tools
    depends+=(lsof bind-tools mtr socat htop iotop openbsd-netcat strace)

    # filesystems
    depends+=(exfat-utils dosfstools f2fs-tools)

    # Base Group
    depends+=(autoconf automake binutils bison fakeroot flex gcc
    groff libtool m4 make patch pkgconf systemd)

    # C/C++
    depends+=(cmake meson cscope ctags llvm clang gdb lldb boost)

    # zsh (to configure via dotfiles, or install grm-zsh-config afterwards)
    depends+=(acpi powerline powerline-fonts awesome-terminal-fonts zsh)

    # editor nvim vor CLI and gvim for GUI (see below)
    depends+=(neovim python-neovim gvim)
    install -dm 0755 "${pkgdir}/usr/bin"
    ln -s /usr/bin/nvim "${pkgdir}/usr/bin/vi"
    install -dm755 "${pkgdir}/usr/share/nvim/runtime/plugin/"
    ln -sf /usr/share/vim/vimfiles/plugin/fzf.vim "${pkgdir}/usr/share/nvim/runtime/plugin/fzf.vim"

    # Python
    depends+=(python-gobject python-pyqt5 python-scipy python-sympy python-cairocffi
    python-docker python-docutils python-gmpy2 python-jinja python-matplotlib
    python-pillow python-pip python-pygal python-pygments python-pytest python-setuptools
    python-snowballstemmer python-virtualenv python-yaml python-django python-tox
    python-pandas python-cvxopt python-webtest python-sphinx python-lxml python-pyx 
    ipython jupyter)

    # DB
    depends+=(sqlite mariadb)

    # Java/JS
    depends+=(jdk-openjdk yarn npm nodejs prettier scala gradle clojure groovy)

    # Other Languages
    depends+=(go mono dotnet-sdk skia-sharp ghc pandoc cabal-install git-annex lua rust julia 
    openblas gcc-fortran gcc-objc ruby fpc)

    # IDE's
    depends+=(atom eclipse-cpp intellij-idea-community-edition lazarus)

    # PHP/Mediawiki
    depends+=(php nginx mediawiki)

    # bluetooth
    depends+=(bluez bluez-utils)

    # audio
    depends+=(alsa-utils pulseaudio pulseaudio-alsa pulseaudio-bluetooth pavucontrol paprefs)

    # drivers and utilities
    depends+=(xf86-input-libinput xf86-input-synaptics
    xf86-video-intel xf86-video-vesa nvidia nvidia-utils)

    # Xorg packages and utilities
    depends+=(xorg-xsetroot xorg-xkill xorg-xbacklight xorg-bdftopcf
    xorg-iceauth xorg-luit xorg-mkfontdir xorg-mkfontscale xorg-sessreg
    xorg-setxkbmap xorg-smproxy xorg-x11perf xorg-xauth
    xorg-xcmsdb xorg-xcursorgen xorg-xdpyinfo xorg-xdriinfo xorg-xev
    xorg-xgamma xorg-xhost xorg-xinput xorg-xkbcomp xorg-xkbevd xorg-xkbutils
    xorg-xlsatoms xorg-xlsclients xorg-xmodmap xorg-xpr xorg-xprop
    xorg-xrandr xorg-xrdb xorg-xrefresh xorg-xset xorg-xvinfo
    xorg-xwd xorg-xwininfo xorg-xwud xorg-server)

    # xmonad window manager
    depends+=(xmonad xmonad-contrib xterm alacritty xorg-xinit dmenu gmrun scrot slock
    libnotify dunst)

    # fonts
    depends+=(noto-fonts noto-fonts-cjk noto-fonts-emoji noto-fonts-extra
    ttf-dejavu ttf-freefont xorg-fonts-misc)

    # virtualisation
    depends+=(virtualbox-guest-modules-arch virtualbox-guest-utils virtualbox-host-modules-arch virtualbox vagrant)

    # docker
    depends+=(docker docker-compose dnsmasq)

    # embedded
    depends+=(qemu qemu-arch-extra picocom ddrescue arm-none-eabi-gcc)

    # electronics
    depends+=(kicad arduino arduino-docs)

    # graphics
    depends+=(vtk mayavi opencascade librecad blender gimp krita inkscape sk1
    fontforge imagemagick imagemagick-doc processing openscad)

    # office
    depends+=(libreoffice-fresh mathjax
    texlive-core texlive-fontsextra texlive-formatsextra texlive-latexextra texlive-langcyrillic)

    # video
    depends+=(vlc ffmpeg)

    # browsers
    depends+=(firefox chromium links qutebrowser)

    # viewers
    depends+=(feh links evince thunar ghostscript mupdf)

    # mail, IRC
    depends+=(thunderbird neomutt offlineimap msmtp weechat)

    # dicts
    depends+=(goldendict aspell-de aspell-en aspell-es aspell-fr aspell-it aspell-ru)

    # maths
    depends+=(octave sagemath r geogebra root gnuplot)

    # science
    depends+=(pymol)

    # organize, finance
    depends+=(task ledger)
}


